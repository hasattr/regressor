{
    "name": "Regressor",
    "version": "0.0.3",
    "description": "Regression comment generator.",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "declarativeContent",
        "contextMenus",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Regressor",      
        "default_popup": "popup.html",
        "default_icon": {
          "16": "icon16.png",
          "32": "icon32.png",
          "48": "icon48.png",
          "128": "icon128.png"
        }
    },
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
        {
          "matches": ["*://*.activision.com/*"],
          "all_frames": true,
          "js": ["contentScript.js"]
        }
    ]

}